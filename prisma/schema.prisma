generator client {
  provider = "prisma-client-js"
}

// Prisma 7: No url/directUrl here - moved to prisma.config.ts
datasource db {
  provider = "postgresql"
}

// ============================================
// NextAuth v5 Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")

  accounts     Account[]
  sessions     Session[]
  trees        Tree[]
  sentGifts    Gift[]       @relation("SentGifts")
  decorations  Decoration[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Christmas Tree App Models
// ============================================

model Tree {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  name        String   @default("My Christmas Tree")
  theme       String   @default("classic") // classic, modern, winter
  decorations Json     @default("[]")
  position    Json     @default("{\"x\":0,\"y\":0,\"z\":0}")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  gifts Gift[]

  @@unique([userId])
  @@map("trees")
}

model Gift {
  id               String    @id @default(cuid())
  treeId           String    @map("tree_id")
  fromUserId       String?   @map("from_user_id")
  senderName       String?   @map("sender_name")
  encryptedContent String    @map("encrypted_content") @db.Text
  encryptedImage   String?   @map("encrypted_image") @db.Text // Base64 encrypted image
  giftType         GiftType  @map("gift_type")
  encryptionHint   String?   @map("encryption_hint")
  position         Json      @default("{\"x\":0,\"y\":0,\"z\":0}")
  opened           Boolean   @default(false)
  openedAt         DateTime? @map("opened_at")
  createdAt        DateTime  @default(now()) @map("created_at")

  tree Tree  @relation(fields: [treeId], references: [id], onDelete: Cascade)
  from User? @relation("SentGifts", fields: [fromUserId], references: [id], onDelete: SetNull)

  @@index([treeId])
  @@map("gifts")
}

enum GiftType {
  VOUCHER      // Codice voucher
  SUBSCRIPTION // Netflix, Spotify, etc
  PHYSICAL     // Physical gift (requires address)
  MESSAGE      // Message/letter
  EXPERIENCE   // Experience (dinner, trip, etc)
}

model Decoration {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  decorationType String   @map("decoration_type") // ball, star, lights, etc
  color          String   @default("#ff0000")
  unlockedBy     String?  @map("unlocked_by") // minigame-id or null if default
  unlockedAt     DateTime @default(now()) @map("unlocked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("decorations")
}
